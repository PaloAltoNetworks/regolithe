{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Specification",
    "description": "Represents an object with all its attributes and relations",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "model"
    ],
    "properties": {
        "attributes": {
            "$ref": "#/definitions/attributes"
        },
        "relations": {
            "type": "array",
            "description": "List of relations between the represented object and other ones.",
            "items": {
                "$ref": "#/definitions/relation"
            }
        },
        "model": {
            "$ref": "#/definitions/model"
        }
    },
    "definitions": {
        "model": {
            "title": "Model",
            "description": "Holds basic information of the represented object.",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "package",
                "rest_name",
                "resource_name",
                "entity_name",
                "description"
            ],

            "properties": {
                "aliases": {
                    "description": "List of aliases to represent a specification.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "create": {
                    "description": "The represented object can be created.",
                    "type": "boolean"
                },
                "delete": {
                    "description": "Therepresented object can be deleted.",
                    "type": "boolean"
                },
                "description": {
                    "description": "The description of the represented object.",
                    "type": "string"
                },
                "entity_name": {
                    "description": "Camel-cased version of the rest_name.",
                    "type": "string"
                },
                "extends": {
                    "description": "List of base specification this specification extends on.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "get": {
                    "description": "The represented object can be retrieved.",
                    "type": "boolean"
                },
                "package": {
                    "description": "The name of the package of the represented object.",
                    "type": "string"
                },
                "private": {
                    "description": "The represented object is private.",
                    "type": "boolean"
                },
                "resource_name": {
                    "description": "The plural version of the rest_name.",
                    "type": "string"
                },
                "rest_name": {
                    "description": "The unique name representing the object.",
                    "type": "string"
                },
                "root": {
                    "description": "The represented object acts as the root specification.",
                    "type": "boolean"
                },
                "update": {
                    "description": "The represented object can be updated.",
                    "type": "boolean"
                }
            }
        },
        "parameter": {
            "title": "Parameter",
            "description": "Document a parameters that can be sent with the query.",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "description": "Name of the parameter.",
                    "type": "string"
                },
                "description": {
                    "description": "Description of the parameter.",
                    "type": "string"
                },
                "type": {
                    "description": "The type of parameter.",
                    "type": "string",
                    "enum": [
                        "string",
                        "integer",
                        "float",
                        "boolean",
                        "enum",
                        "time"
                    ]
                },
                "multiple": {
                    "description": "Defines if the parameter can be sent multiple times.",
                    "type": "boolean"
                }
            }
        },
        "attributes": {
__ATTRIBUTE__
        },
        "relation": {
            "title": "Relation",
            "description": "Allows to declare a relation between two specifications.",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "rest_name"
            ],

            "properties": {
                "rest_name": {
                    "description": "rest_name used as a link to the related object",
                    "type": "string"
                },
                "create": {
                    "$ref": "#/definitions/relationAction"
                },
                "delete": {
                    "$ref": "#/definitions/relationAction"
                },
                "get": {
                    "$ref": "#/definitions/relationAction"
                },
                "update": {
                    "$ref": "#/definitions/relationAction"
                }
            }
        },
        "relationAction": {
            "title": "Relation Action",
            "description": "Specification of a action of a relation.",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "description": {
                    "description": "Description of the relation.",
                    "type": "string"
                },
                "deprecated": {
                    "description": "Tells if the relation is deprecated",
                    "type": "string"
                },
                "parameters": {
                    "description": "List of parameters for the relation.",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/parameter"
                    }
                }
            }
        }
    }
}
