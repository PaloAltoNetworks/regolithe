{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Regolithe Specification",
    "description": "An attribute of a specification",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "model"
    ],

    "properties": {
        "attributes": {
            "type": "array",
            "description": "List of attributes of the represented object",
            "items": {
                "type": "object",
                "oneOf": [
                    {"$ref": "rego-attribute.json"}
                ]
            }
        },
        "children": {
            "type": "array",
            "description": "List of child apis of the represented object",
            "items": {
                "type": "object",
                "oneOf": [
                    {"$ref": "rego-api.json"}
                ]
            }
        },
        "model": {
            "description": "Base information of the represented object",
            "type": "object",
            "oneOf": [
                {"$ref": "rego-model.json"}
            ]
        }
    }
}
