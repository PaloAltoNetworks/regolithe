{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Specification",
    "description": "Represents an object with all its attributes and relations",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "model"
    ],

    "properties": {
        "attributes": {
            "type": "array",
            "description": "List of attributes of the represented object.",
            "items": {
                "type": "object",
                "oneOf": [
                    {"$ref": "rego-attribute.json"}
                ]
            }
        },
        "children": {
            "type": "array",
            "description": "List of relations between the represented object and other ones.",
            "items": {
                "type": "object",
                "oneOf": [
                    {"$ref": "rego-relation.json"}
                ]
            }
        },
        "model": {
            "description": "Base information of the represented object.",
            "type": "object",
            "oneOf": [
                {"$ref": "rego-model.json"}
            ]
        }
    }
}
