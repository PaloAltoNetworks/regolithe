{
    "name": "regolithe-specifications",
    "displayName": "Regolithe Specifications",
    "description": "Snippets and schema validation for Regolithe Specifications",
    "version": "1.0.0",
    "icon": "assets/icon.png",
    "publisher": "aporeto",
    "scripts": {
        "vscode:prepublish": "./scripts/prepublish.sh",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/aporeto-inc/regolithe"
    },
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Linters",
        "Snippets"
    ],
    "activationEvents": [
        "onLanguage:json"
    ],
    "main": "out/extension",
    "contributes": {
        "snippets": [
            {
                "language": "json",
                "path": "./snippets/snippets.json"
            }
        ],
        "jsonValidation": [
            {
                "fileMatch": "*.spec",
                "url": "./schemas/regolithe.json"
            }
        ],
        "configurationDefaults": {
            "[json]": {
              "editor.formatOnSave": true
            }
        }
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
