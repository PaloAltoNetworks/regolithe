{
    "name": "regolithe-specifications",
    "displayName": "Regolithe Specifications",
    "description": "Snippets and schema validation for Regolithe Specifications",
    "version": "1.0.0",
    "icon": "assets/icon.png",
    "publisher": "aporeto",
    "scripts": {
        "vscode:prepublish": "rm -rf ./schemas && mkdir ./schemas && cp ../../../schema/regolithe.json ./schemas"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/aporeto-inc/regolithe"

    },
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Linters",
        "Snippets"
    ],
    "contributes": {
        "snippets": [{
            "language": "regolithe",
            "path": "./snippets/snippets.json"
        }],
        "jsonValidation": [{
            "fileMatch": "*.spec",
            "url": "./schemas/regolithe.json"
        }]
    }
}
